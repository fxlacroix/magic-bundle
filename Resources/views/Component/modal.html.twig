{% if buttonSave is not defined %}
    {% set buttonSave = true %}
{% endif %}

{% if id is not defined %}
    {% set id="myModal" %}
{% endif %}

<!-- Modal -->
<div id="{{ id }}" class="modal hide fade" tabindex="-1" role="dialog" aria-labelledby="{{ id }}Label"
     aria-hidden="true">
    <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
        <h3>Choisissez</h3>
    </div>

    <div class="modal-body">
        <div id="ajax_form"></div>
    </div>


    <div class="modal-footer">
        <button class="btn btn-close" data-dismiss="modal" aria-hidden="true">Close</button>
        {% if buttonSave %}
            <button class="btn btn-primary">Save changes</button>
        {% endif %}
    </div>

</div>